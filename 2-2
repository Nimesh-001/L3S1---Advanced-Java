one singalton pattern......


public class MyDBConnection {
    private static MyDBConnection mydb = new MyDBConnection();

    private MyDBConnection() {}

    public static MyDBConnection getInstance() {
        return mydb;
    }

    public static void main(String[] args) {
        MyDBConnection obj1 = MyDBConnection.getInstance();
        MyDBConnection obj2 = MyDBConnection.getInstance();
        System.out.println(obj1);
        System.out.println(obj2);
        
    }
}
