public class myclock extends Thread {


    @Override
    public void run() {

        //int i = 20;
        for(int i = 20; i >=1;i--){
            System.out.println("t minus "+ i);
            try {
                Thread.sleep(1000);
            } catch (InterruptedException e) {
                throw new RuntimeException(e);
            }

        }

    }
}



